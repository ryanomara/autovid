{
  "name": "autovid-desktop",
  "version": "1.0.0",
  "description": "AutoVid Desktop Application",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.autovid.desktop",
    "productName": "AutoVid",
    "files": [
      "electron-main.js",
      "../dist/**/*",
      "../web/**/*"
    ],
    "directories": {
      "output": "build"
    },
    "linux": {
      "target": "AppImage",
      "category": "Video"
    },
    "mac": {
      "category": "public.app-category.video"
    },
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}
